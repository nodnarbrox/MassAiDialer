# Server Configuration
SERVER=your_server_here
PORT=3000

# Twilio Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
APP_NUMBER=your_twilio_phone_number

# AI Services Configuration
# Choose between 'gpt-neo', 'gpt-j', or other supported models from Hugging Face
LLM_SERVICE=gpt-neo

# Choose 'coqui' for Coqui TTS
TTS_SERVICE=coqui

# Podio Integration
PODIO_ACCESS_TOKEN=your_podio_access_token

# System Messages
SYSTEM_MESSAGE="Your system message here"
INITIAL_MESSAGE="Your initial message here"

# Call Recording Configuration
RECORD_CALLS=false  # Set to 'true' if you want to record calls

# U.S. National Do Not Call (DNC) List API
DNC_API_URL=https://api.ftc.gov/v0/dnc-complaints?api_key=your_dnc_api_key

# Skip Trace Service (SkipEngine)
SKIP_TRACE_SERVICE=https://api.skipengine.com/append
SKIP_TRACE_API_KEY=your_skipengine_api_key

# Optional Configuration
# Set the default number to call when UI launches
YOUR_NUMBER=default_phone_number_to_call

# When a call needs to be transferred, what number should it be transferred to?
TRANSFER_NUMBER=default_transfer_phone_number
